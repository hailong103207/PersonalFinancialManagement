<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="3.25"
            android:background="@drawable/bgr_fragment_taisan"
            android:elevation="6dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:padding="0dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".35"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:orientation="horizontal">

                <!--
                            <ImageView
                                android:id="@+id/img_avatar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="2dp"
                                android:background="@drawable/icon1" />
                -->

                <TextView
                    android:id="@+id/tvMucTieu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="Nhà biệt thự"
                    android:textColor="#111"
                    android:textSize="13dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvThangNam"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:text="11 2020"
                    android:textColor="#7C7676"
                    android:textSize="9dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/tvLoai"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center_vertical"
                        android:text="5 năm"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tvChi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:gravity="end|center_vertical"
                        android:text="-40000000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3.1"
            android:background="@drawable/bgr_fragment_taisan"
            android:elevation="6dp"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="Gth.tại: "
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tvGiaTriHienTai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="BDS"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="L.phát: "
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tvLangPhat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="0%"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:text="Dự kiến: "
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tvDuKien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="2 năm"
                    android:textColor="@color/colorPrimary2"
                    android:textSize="9dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/bgr_fragment_taisan"
            android:elevation="6dp"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="49"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Thị trg: "
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tvThiTruong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="4000000"
                        android:textColor="@color/colorPrimary2"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="L.phát: "
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tvMatGia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="4000000"
                        android:textColor="@color/colorPrimary2"
                        android:textSize="9dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/line" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="49"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Tổng: "
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tvTongMat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="4000000"
                        android:textColor="@color/colorPrimary2"
                        android:textSize="9dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="Tháng: "
                        android:textSize="9dp" />

                    <TextView
                        android:id="@+id/tvThangMat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:text="4000000"
                        android:textColor="@color/colorPrimary2"
                        android:textSize="9dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

