<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lnAll"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnLong"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="5dp"
        android:background="@drawable/backgound_item_muctieu"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNgay"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="3dp"
                android:text="20"
                android:textColor="#111"
                android:textSize="40dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvThangNam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="11 2020"
                    android:textColor="#7C7676"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvGioPhut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="15 giờ 30 phút"
                    android:textColor="#7C7676"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <ImageView
                    android:id="@+id/imgIcon"
                    android:layout_width="47dp"
                    android:layout_height="47dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú: "
                android:textColor="#7C7676"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMucTieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ăn sáng "
                android:textColor="#111"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30.000 vnđ"
                    android:textColor="#FC4850"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnShort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/backgound_item_muctieu"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon2"
                android:layout_width="35dp"
                android:layout_height="35dp" />

            <TextView
                android:id="@+id/tvMucTieu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ăn sáng "
                android:gravity="center_vertical"
                android:textColor="#111"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNgayThangNam"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="14/5/2021 "
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#111"
                android:textSize="12dp"
/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <TextView
                    android:id="@+id/tvChi2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30.000 vnđ"
                    android:textColor="#FC4850"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</LinearLayout>